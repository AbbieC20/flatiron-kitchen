<h1> Edit an Ingredient: </h1>

  <%= form_for @recipe do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>

    <%= f.collection_check_boxes :ingredient_ids, @ingredients, :id, :name do |ingr| %>
      <%= ingr.check_box %> <%= ingr.label %> 
      <br/>
    <% end %>

    <%= f.submit %>
<% end %>